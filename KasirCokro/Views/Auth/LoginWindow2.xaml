<Window x:Class="KasirCokro.Views.Auth.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - Cokromart" 
        Height="450" 
        Width="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#00FFEB"
        WindowState="Maximized">
    <Grid>
        <Border CornerRadius="10" Background="White" Margin="80,40,80,40" MaxHeight="300px" MaxWidth="500px">
            <Border.Effect>
                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2"/>
            </Border.Effect>
            <StackPanel Margin="20">
                <TextBlock Text="Admin Kasir" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#00FFEB" FontFamily="Poppins"/>
                <TextBlock Text="Silakan login untuk masuk ke sistem" FontSize="14" HorizontalAlignment="Center" Margin="0,10,0,30" FontFamily="Poppins"/>

                <!-- Input Username -->
                <DockPanel Margin="0,0,0,15">
                    <Image Source="pack://application:,,,/Resources/user_icon.png" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="txtUsername" Padding="5" Height="25" BorderThickness="0" Background="#F0F0F0" FontFamily="Poppins"/>
                </DockPanel>

                <!-- Input Password -->
                <DockPanel Margin="0,0,0,20">
                    <Image Source="pack://application:,,,/Resources/lock_icon.png" Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <PasswordBox x:Name="txtPassword" Padding="5" Height="25" BorderThickness="0" Background="#F0F0F0" FontFamily="Poppins"/>
                </DockPanel>

                <!-- Tombol Login -->
                <Button Content="Login" Click="BtnLogin_Click" Background="#00FFEB" Foreground="White" FontSize="18" FontWeight="SemiBold" Width="232" Height="40" HorizontalAlignment="Center" FontFamily="Poppins">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="20" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Footer -->
                <TextBlock Text="© 2025 Admin Kasir" HorizontalAlignment="Center" FontSize="12" Foreground="#6B7280" Margin="10,20,0,0" FontFamily="Poppins"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
