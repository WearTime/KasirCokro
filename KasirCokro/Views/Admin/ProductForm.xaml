<Window x:Class="KasirCokro.Views.Admin.ProductForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Form Produk" 
        Height="900" 
        Width="1000"
        WindowStartupLocation="CenterScreen"
        FontFamily="Inter, Segoe UI"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563EB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#9CA3AF"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F9FAFB"/>
                                <Setter Property="BorderBrush" Value="#9CA3AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Input Style -->
        <Style x:Key="ModernInput" TargetType="TextBox">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer Name="PART_ContentHost" 
                                          VerticalAlignment="Center"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3B82F6"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <ToggleButton Grid.Column="0" 
                                              Background="Transparent"
                                              BorderThickness="0"
                                              IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                              ClickMode="Press">
                                    <Grid>
                                        <ContentPresenter Name="ContentSite" 
                                                          IsHitTestVisible="False"
                                                          Content="{TemplateBinding SelectionBoxItem}"
                                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                          ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                          Margin="16,0,30,0"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Left"/>
                                        <Path Name="Arrow" 
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Center"
                                              Data="M 0 0 L 4 4 L 8 0 Z"
                                              Fill="#6B7280"
                                              Margin="0,0,16,0"/>
                                    </Grid>
                                </ToggleButton>
                                <Popup Name="Popup" 
                                       Placement="Bottom"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       AllowsTransparency="True"
                                       Focusable="False"
                                       PopupAnimation="Slide">
                                    <Grid Name="DropDown" 
                                          SnapsToDevicePixels="True"
                                          MinWidth="{TemplateBinding ActualWidth}"
                                          MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                        <Border Name="DropDownBorder"
                                                Background="White"
                                                BorderThickness="1"
                                                BorderBrush="#CBD5E1"
                                                CornerRadius="8"/>
                                        <ScrollViewer Margin="4,6,4,6" 
                                                      SnapsToDevicePixels="True">
                                            <ItemsPresenter Name="ItemsPresenter" 
                                                            KeyboardNavigation.DirectionalNavigation="Contained"
                                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                        </ScrollViewer>
                                    </Grid>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3B82F6"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ReadOnlyInput" TargetType="TextBox">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ScrollViewer Name="PART_ContentHost" 
                                          VerticalAlignment="Center"
                                          HorizontalScrollBarVisibility="Hidden"
                                          VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ReadOnlyLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="InputLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Modal Container Style -->
        <Style x:Key="ModalContainer" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="40"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" ShadowDepth="0" BlurRadius="50" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Header Style -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Subtitle Style -->
        <Style x:Key="SubtitleText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Margin" Value="0,0,0,40"/>
        </Style>

        <!-- Close Button Style -->
        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="16"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F3F4F6"/>
                                <Setter Property="Foreground" Value="#374151"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Modal Overlay -->
    <Grid>
        <!-- Modal Content -->
        <Border Style="{StaticResource ModalContainer}" 
                MaxWidth="900"
                MaxHeight="800"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Grid>
                <!-- Close Button -->
                <Button Content="×" 
                        Style="{StaticResource CloseButton}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Margin="0,-10,-10,0"
                        Click="BtnBatal_Click"/>

                <!-- Form Content -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" 
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="0,20,0,0">
                    <StackPanel>
                        <!-- Header Section -->
                        <TextBlock Text="Form Produk" Style="{StaticResource HeaderText}"/>
                        <TextBlock Text="Tambah atau edit data produk dengan lengkap" Style="{StaticResource SubtitleText}"/>

                        <!-- Form Fields -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Barcode Field -->
                            <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,20">
                                <TextBlock Text="Barcode" Style="{StaticResource InputLabel}"/>
                                <TextBox x:Name="txtBarcode" 
                                         Style="{StaticResource ModernInput}" 
                                         ToolTip="Masukkan kode barcode produk"/>
                            </StackPanel>

                            <!-- Nama Produk Field -->
                            <StackPanel Grid.Row="0" Grid.Column="2" Margin="0,0,0,20">
                                <TextBlock Text="Nama Produk" Style="{StaticResource InputLabel}"/>
                                <TextBox x:Name="txtNamaProduk" 
                                         Style="{StaticResource ModernInput}"
                                         ToolTip="Masukkan nama produk"/>
                            </StackPanel>

                            <!-- Supplier Field -->
                            <StackPanel Grid.Row="1" Grid.Column="0" Margin="0,0,0,20">
                                <TextBlock Text="Supplier" Style="{StaticResource InputLabel}"/>
                                <ComboBox x:Name="cmbSupplier" 
                                          Style="{StaticResource ModernComboBox}"
                                          DisplayMemberPath="NamaSupplier"
                                          SelectedValuePath="Id"
                                          ToolTip="Pilih supplier"/>
                            </StackPanel>

                            <!-- Harga Beli Field -->
                            <StackPanel Grid.Row="1" Grid.Column="2" Margin="0,0,0,20">
                                <TextBlock Text="Harga Beli" Style="{StaticResource InputLabel}"/>
                                <TextBox x:Name="txtHargaBeli" 
                                         Style="{StaticResource ModernInput}"
                                         Text="0"
                                         ToolTip="Masukkan harga beli produk"/>
                            </StackPanel>

                            <!-- Harga Jual Field -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,0,20">
                                <TextBlock Text="Harga Jual" Style="{StaticResource InputLabel}"/>
                                <TextBox x:Name="txtHargaJual" 
                                         Style="{StaticResource ModernInput}"
                                         Text="0"
                                         ToolTip="Masukkan harga jual produk"/>
                            </StackPanel>

                            <!-- Harga Jual Satuan Field -->
                            <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,0,20">
                                <TextBlock Text="Laba" Style="{StaticResource InputLabel}"/>
                                <TextBox x:Name="txtLaba" 
                                         Style="{StaticResource ModernInput}"
                                         Text="0"
                                         ToolTip="Masukkan Laba"/>
                            </StackPanel>

                            <!-- Stok Field -->
                            <StackPanel Grid.Row="3" Grid.Column="0" Margin="0,0,0,20">
                                <TextBlock Text="Stok" Style="{StaticResource InputLabel}"/>
                                <TextBox x:Name="txtStok" 
                                         Style="{StaticResource ModernInput}"
                                         Text="0"
                                         ToolTip="Masukkan jumlah stok"/>
                            </StackPanel>

                            <!-- Stok Awal Field -->
                            <StackPanel Grid.Row="3" Grid.Column="2" Margin="0,0,0,20">
                                <TextBlock Text="Stok Awal" Style="{StaticResource InputLabel}"/>
                                <TextBox x:Name="txtStokAwal" 
                                         Style="{StaticResource ModernInput}"
                                         Text="0"
                                         ToolTip="Masukkan stok awal"/>
                            </StackPanel>

                            <!-- Mark Up Field -->
                            <StackPanel Grid.Row="4" Grid.Column="0" Margin="0,0,0,20">
                                <TextBlock Text="Mark Up" Style="{StaticResource InputLabel}"/>
                                <TextBox x:Name="txtMarkUp" 
                                         Style="{StaticResource ModernInput}"
                                         Text="0"
                                         ToolTip="Masukkan mark up"/>
                            </StackPanel>

                            <!-- Persentase Field -->
                            <StackPanel Grid.Row="4" Grid.Column="2" Margin="0,0,0,20">
                                <TextBlock Text="Persentase" Style="{StaticResource ReadOnlyLabel}"/>
                                <TextBox x:Name="txtPersentase" 
                                         Style="{StaticResource ReadOnlyInput}"
                                         ToolTip="Masukkan persentase"/>
                            </StackPanel>

                            <!-- Harta Field -->
                            <StackPanel Grid.Row="5" Grid.Column="0" Margin="0,0,0,32">
                                <TextBlock Text="Harta" Style="{StaticResource InputLabel}"/>
                                <TextBox x:Name="txtHarta" 
                                         Style="{StaticResource ModernInput}"
                                         Text="0"
                                         ToolTip="Masukkan nilai harta"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Row="5" Grid.Column="2" Margin="0,0,0,32">
                                <TextBlock Text="Pendapatan" Style="{StaticResource InputLabel}"/>
                                <TextBox x:Name="txtPendapatan" 
                                         Style="{StaticResource ModernInput}"
                                         Text="0"
                                         ToolTip="Masukkan nilai pendapatan"/>
                            </StackPanel>

                            <!-- Action Buttons -->
                            <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3" 
                                        Orientation="Horizontal" 
                                        HorizontalAlignment="Right"
                                        Margin="0,20,0,0">
                                <Button Content="Batal" 
                                        Style="{StaticResource SecondaryButton}"
                                        Margin="0,0,16,0"
                                        Click="BtnBatal_Click"/>

                                <Button Content="Simpan Produk" 
                                        Style="{StaticResource PrimaryButton}"
                                        Click="BtnSimpan_Click"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>