<Window x:Class="KasirCokro.Views.Admin.BarangMasukPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Barang Masuk" Height="900" Width="1400"
        Background="#FAFBFC" WindowStartupLocation="CenterScreen"
        FontFamily="Inter, Segoe UI"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Sidebar Button Style -->
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                Margin="12,2"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F1F5F9"/>
                                <Setter Property="Foreground" Value="#475569"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Sidebar Button Style -->
        <Style x:Key="ActiveSidebarButton" TargetType="Button" BasedOn="{StaticResource SidebarButton}">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ReadOnlyInput" TargetType="TextBox">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8">
                            <ScrollViewer Name="PART_ContentHost" 
                                  VerticalAlignment="Center"
                                  HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0056B3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004085"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#CBD5E1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <Grid>
                                <ToggleButton Grid.Column="0" 
                                              Background="Transparent"
                                              BorderThickness="0"
                                              IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                              ClickMode="Press">
                                    <Grid>
                                        <ContentPresenter Name="ContentSite" 
                                                          IsHitTestVisible="False"
                                                          Content="{TemplateBinding SelectionBoxItem}"
                                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                          ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                          Margin="16,0,30,0"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Left"/>
                                        <Path Name="Arrow" 
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              Data="M 0 0 L 4 4 L 8 0 Z"
                                              Fill="#6B7280"
                                              Margin="0,0,16,0"/>
                                    </Grid>
                                </ToggleButton>
                                <Popup Name="Popup" 
                                       Placement="Bottom"
                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                       AllowsTransparency="True"
                                       Focusable="False"
                                       PopupAnimation="Slide">
                                    <Grid Name="DropDown" 
                                          SnapsToDevicePixels="True"
                                          MinWidth="{TemplateBinding ActualWidth}"
                                          MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                        <Border Name="DropDownBorder"
                                                Background="White"
                                                BorderThickness="1"
                                                BorderBrush="#CBD5E1"
                                                CornerRadius="8"/>
                                        <ScrollViewer Margin="4,6,4,6" 
                                                      SnapsToDevicePixels="True">
                                            <ItemsPresenter Name="ItemsPresenter" 
                                                            KeyboardNavigation.DirectionalNavigation="Contained"
                                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                        </ScrollViewer>
                                    </Grid>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#3B82F6"/>
                                <Setter Property="BorderThickness" Value="2"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#94A3B8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#545B62"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Success Button Style -->
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E7E34"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="12,6.7"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007BFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern DatePicker Style -->
        <Style x:Key="ModernDatePicker" TargetType="DatePicker">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <DatePickerTextBox x:Name="PART_TextBox" Grid.Column="0" 
                                                   Background="Transparent" BorderThickness="0"/>
                                <Button x:Name="PART_Button" Grid.Column="1" 
                                        Background="Transparent" BorderThickness="0"
                                        Content="📅" FontSize="14"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007BFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern DataGrid Style -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F1F3F4"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- DataGrid Header Style -->
        <Style x:Key="ModernDataGridColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,16"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- DataGrid Row Style -->
        <Style x:Key="ModernDataGridRow" TargetType="DataGridRow">
            <Setter Property="Padding" Value="0,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Cell Style -->
        <Style x:Key="ModernDataGridCell" TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#E0E7FF" ShadowDepth="0" BlurRadius="20" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Sidebar -->
        <Border Background="White" Width="240" HorizontalAlignment="Left" 
                BorderBrush="#E5E7EB" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,16,0,0">
                    <!-- Logo/Brand -->
                    <StackPanel Margin="16,0,16,20">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#3B82F6" CornerRadius="6" Width="28" Height="28" Margin="0,0,10,0">
                                <TextBlock Text="🏪" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="CokroApp" FontSize="16" FontWeight="Bold" Foreground="#111827"/>
                                <TextBlock Text="Admin Panel" FontSize="10" Foreground="#6B7280"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    <!-- Main Navigation Menu -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="MAIN" FontSize="10" FontWeight="SemiBold" 
                                   Foreground="#9CA3AF" Margin="16,0,16,8"/>

                        <Button Style="{StaticResource SidebarButton}" Click="BtnDashboard_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Dashboard" FontSize="13"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButton}" Click="Product_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📦" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Data Produk" FontSize="13"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButton}" Click="Supplier_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🏭" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Data Supplier" FontSize="13"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource ActiveSidebarButton}" Click="BrngMasuk_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📥" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Barang Masuk" FontSize="13"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButton}" Click="BrngKeluar_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📤" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Barang Keluar" FontSize="13"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButton}" Click="Kas_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💳" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Kas" FontSize="13"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Reports Section -->
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="LAPORAN" FontSize="10" FontWeight="SemiBold" 
                                   Foreground="#9CA3AF" Margin="16,0,16,8"/>

                        <Button Style="{StaticResource SidebarButton}" Click="TransactionMasuk_Click" >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Transaksi Masuk" FontSize="13"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButton}" Click="TransactionKeluar_Click" >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📈" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Transaksi Keluar" FontSize="13"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButton}" >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💸" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Hutang" FontSize="13"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButton}"  Click="Pihutang_Click" >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💰" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Piutang" FontSize="13"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- User Section -->
                    <Border Background="#F8FAFC" CornerRadius="8" Margin="16,0,16,16" Padding="12">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <Ellipse Width="24" Height="24" Fill="#3B82F6" Margin="0,0,8,0"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Admin User" FontSize="12" FontWeight="SemiBold" Foreground="#111827"/>
                                    <TextBlock Text="Administrator" FontSize="10" Foreground="#6B7280"/>
                                </StackPanel>
                            </StackPanel>
                            <Button Content="Logout" Background="Transparent" Foreground="#EF4444" 
                                    BorderThickness="0" FontSize="10" HorizontalAlignment="Left" 
                                    Padding="0" Cursor="Hand" Click="Logout_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
        <!-- Main Content -->
        <Grid Margin="240,0,0,0">
            <!-- Top Bar -->
            <Border Background="White" Height="80" VerticalAlignment="Top" 
                    BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                <Grid Margin="32,0">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                        <TextBlock Text="Barang Masuk" FontSize="32" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,8"/>
                        <TextBlock Text="Kelola barang masuk dari supplier" FontSize="16" Foreground="#6B7280" FontWeight="Medium"/>
                    </StackPanel>

                    <!-- Total Section di Header -->
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
                        <Border Background="#E8F5E8" CornerRadius="8" Padding="16,8" Margin="0,0,16,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💰" FontSize="20" Margin="0,0,8,0"/>
                                <StackPanel>
                                    <TextBlock Text="Total Hari Ini" FontSize="11" Foreground="#6B7280"/>
                                    <TextBlock x:Name="txtTotalHariIni" Text="Rp 0" FontSize="18" FontWeight="Bold" Foreground="#2E7D32"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <Border Background="#E3F2FD" CornerRadius="8" Padding="16,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📦" FontSize="20" Margin="0,0,8,0"/>
                                <StackPanel>
                                    <TextBlock Text="Total Item" FontSize="11" Foreground="#6B7280"/>
                                    <TextBlock x:Name="txtTotalItem" Text="0" FontSize="18" FontWeight="Bold" Foreground="#1976D2"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Dashboard Content -->
            <ScrollViewer Margin="0,80,0,0" VerticalScrollBarVisibility="Auto">
                <Grid Margin="24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Scanner Section -->
                    <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="📱 Scanner Barcode" FontSize="18" FontWeight="Bold" Foreground="#212529" Margin="0,0,0,12"/>
                                <TextBox x:Name="txtBarcode" Style="{StaticResource ModernTextBox}" 
                                         Width="300" HorizontalAlignment="Left"
                                         PreviewKeyDown="TxtBarcode_PreviewKeyDown"
                                         TextChanged="TxtBarcode_TextChanged"
                                         Background="#F8F9FA" BorderBrush="#28A745" BorderThickness="2"
                                         Margin="0,0,0,8"/>
                                <TextBlock Text="Scan barcode atau ketik manual untuk mencari produk" 
                                           FontSize="12" Foreground="#6C757D"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                                <Button Content="🔍 Cari Manual" Click="BtnCariManual_Click" 
                                        Style="{StaticResource SecondaryButton}" 
                                        Width="120" Margin="0,0,12,0"/>
                                <Button Content="🔄 Clear" Click="BtnClear_Click" 
                                        Style="{StaticResource SecondaryButton}" 
                                        Width="80"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Data Table Section -->
                    <Border Grid.Row="2" Style="{StaticResource CardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="📋 Daftar Barang Masuk Hari Ini" FontSize="18" FontWeight="Bold" 
                                           Foreground="#212529" VerticalAlignment="Center"/>
                                <Button Content="📊 Export Excel" Click="BtnExportExcel_Click" 
                                        Style="{StaticResource SuccessButton}" 
                                        Width="120" Margin="16,0,0,0"/>
                            </StackPanel>

                            <DataGrid x:Name="dgBarangMasuk" Grid.Row="1"
                                      Style="{StaticResource ModernDataGrid}"
                                      AutoGenerateColumns="False" 
                                      CanUserAddRows="False"
                                      ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                                      RowStyle="{StaticResource ModernDataGridRow}"
                                      CellStyle="{StaticResource ModernDataGridCell}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Waktu" Binding="{Binding Waktu}" Width="120" />
                                    <DataGridTextColumn Header="Barcode" Binding="{Binding Barcode}" Width="120" />
                                    <DataGridTextColumn Header="Nama Produk" Binding="{Binding NamaProduk}" Width="200" />
                                    <DataGridTextColumn Header="Supplier" Binding="{Binding Supplier}" Width="150" />
                                    <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="80" />
                                    <DataGridTextColumn Header="Harga Beli" Width="120">
                                        <DataGridTextColumn.Binding>
                                            <Binding Path="HargaBeli" StringFormat="Rp {0:N0}"/>
                                        </DataGridTextColumn.Binding>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn Header="Total" Width="120">
                                        <DataGridTextColumn.Binding>
                                            <Binding Path="Total" StringFormat="Rp {0:N0}"/>
                                        </DataGridTextColumn.Binding>
                                    </DataGridTextColumn>
                                    <DataGridTemplateColumn Header="Status" Width="100">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="12" Padding="8,4" HorizontalAlignment="Center">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#E8F5E8"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsKredit}" Value="True">
                                                                    <Setter Property="Background" Value="#FFEBEE"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock FontWeight="SemiBold" FontSize="12">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                                <Setter Property="Text" Value="Tunai"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsKredit}" Value="True">
                                                                        <Setter Property="Foreground" Value="#D32F2F"/>
                                                                        <Setter Property="Text" Value="Kredit"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Border>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </Border>
                </Grid>
            </ScrollViewer>
        </Grid>

        <!-- Modal untuk Detail Produk -->
        <Grid x:Name="modalOverlay" Background="#80000000" Visibility="Collapsed">
            <Border Background="White" CornerRadius="12" Width="500" Height="450" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" ShadowDepth="0" BlurRadius="20" Opacity="0.3"/>
                </Border.Effect>

                <Grid Margin="24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header Modal -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="📦 Detail Barang Masuk" FontSize="20" FontWeight="Bold" 
                                   Foreground="#212529" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <Separator Background="#DEE2E6"/>
                    </StackPanel>

                    <!-- Content Modal -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Info Produk -->
                            <Border Background="#F8F9FA" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="120"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Barcode:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtModalBarcode" Text="" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Nama Produk:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtModalNamaProduk" Text="" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Stok Saat Ini:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtModalStok" Text="" Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Supplier:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtModalSupplier" Text="" Margin="0,0,0,8"/>
                                </Grid>
                            </Border>

                            <!-- Input Section -->
                            <StackPanel>
                                <TextBlock Text="Quantity:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBox x:Name="txtModalQuantity" Style="{StaticResource ModernTextBox}" 
                                         Text="1" Margin="0,0,0,16"/>

                                <TextBlock Text="Harga Beli:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBox x:Name="txtModalHargaBeli" Style="{StaticResource ModernTextBox}" 
                                         Margin="0,0,0,16"/>

                                <CheckBox x:Name="chkKredit" Content="Pembelian Kredit" FontWeight="SemiBold" 
                                          Margin="0,0,0,8" Checked="ChkKredit_Checked" Unchecked="ChkKredit_Unchecked"/>

                                <StackPanel x:Name="pnlSupplierKredit" Visibility="Collapsed">
                                    <TextBlock Text="Nama Supplier:" FontWeight="SemiBold" Margin="0,8,0,8"/>
                                    <TextBox x:Name="txtModalSupplierKredit" Style="{StaticResource ModernTextBox}" 
                                             Margin="0,0,0,16"/>
                                </StackPanel>

                                <Border Background="#E8F5E8" CornerRadius="8" Padding="12" Margin="0,0,0,16">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="💰 Total:" FontWeight="Bold" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock x:Name="txtModalTotal" Text="Rp 0" FontWeight="Bold" FontSize="16" Foreground="#2E7D32"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer Modal -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="❌ Batal" Click="BtnModalBatal_Click" 
                                Style="{StaticResource SecondaryButton}" 
                                Width="100" Margin="0,0,12,0"/>
                        <Button Content="✅ Tambah" Click="BtnModalTambah_Click" 
                                Style="{StaticResource SuccessButton}" 
                                Width="100"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Tambahkan modal ini sebelum penutup tag Grid terakhir di XAML -->

        <!-- Modal untuk Input Manual -->
        <Grid x:Name="modalManualOverlay" Background="#80000000" Visibility="Collapsed">
            <Border Background="White" CornerRadius="12" Width="550" Height="600" 
            HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" ShadowDepth="0" BlurRadius="20" Opacity="0.3"/>
                </Border.Effect>

                <Grid Margin="24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header Modal -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="📝 Input Manual Barang Masuk" FontSize="20" FontWeight="Bold" 
                           Foreground="#212529" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <TextBlock Text="Masukkan data produk secara manual" FontSize="14" 
                           Foreground="#6C757D" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <Separator Background="#DEE2E6"/>
                    </StackPanel>

                    <!-- Content Modal -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Data Produk Section -->
                            <TextBlock Text="📦 Data Produk" FontSize="16" FontWeight="Bold" 
                               Foreground="#495057" Margin="0,0,0,12"/>

                            <Border Background="#F8F9FA" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Barcode -->
                                    <StackPanel Grid.Row="0" Margin="0,0,0,12">
                                        <TextBlock Text="Barcode:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                        <TextBox x:Name="txtManualBarcode" Style="{StaticResource ModernTextBox}" 
                                         />
                                    </StackPanel>

                                    <!-- Nama Produk -->
                                    <StackPanel Grid.Row="1" Margin="0,0,0,12">
                                        <TextBlock Text="Nama Produk:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                        <TextBox x:Name="txtManualNamaProduk" Style="{StaticResource ModernTextBox}" 
                                         />
                                    </StackPanel>

                                    <!-- Stok Saat Ini -->
                                    <StackPanel Grid.Row="2" Margin="0,0,0,12">
                                        <TextBlock Text="Stok Saat Ini:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                        <TextBox x:Name="txtManualStok" Style="{StaticResource ModernTextBox}" 
                                         Text="0" />
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Row="3" Margin="0,0,0,12">
                                        <TextBlock Text="Stok Awal:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                        <TextBox x:Name="txtManualStokAwal" Style="{StaticResource ModernTextBox}" 
                                         Text="0" />
                                    </StackPanel>

                                    <!-- Supplier -->
                                    <StackPanel Grid.Row="4" Margin="0,0,0,0">
                                        <TextBlock Text="Supplier:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                        <ComboBox x:Name="txtManualSupplier" 
                                          Style="{StaticResource ModernComboBox}"
                                          DisplayMemberPath="NamaSupplier"
                                          SelectedValuePath="Id"
                                          ToolTip="Pilih supplier"/>
                                    </StackPanel>
                                    
                                    <StackPanel Grid.Row="5" Margin="0,0,0,12">
                                        <TextBlock Text="Laba" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                        <TextBox x:Name="txtManualLaba" Style="{StaticResource ModernTextBox}" 
                                         Text="0" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="6" Margin="0,0,0,12">
                                        <TextBlock Text="Mark up:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                        <TextBox x:Name="txtManualMarkUp" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="7" Margin="0,0,0,12">
                                        <TextBlock Text="Persentase:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                        <TextBox x:Name="txtManualPercntage" Style="{StaticResource ReadOnlyInput}" />
                                    </StackPanel>

                                    <StackPanel Grid.Row="8" Margin="0,0,0,12">
                                        <TextBlock Text="Harta:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                        <TextBox x:Name="txtManualHarta" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="9" Margin="0,0,0,12">
                                        <TextBlock Text="Pendapatan:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                        <TextBox x:Name="txtManualPendapatan" Style="{StaticResource ModernTextBox}"/>
                                    </StackPanel>

                                </Grid>
                            </Border>

                            <!-- Transaksi Section -->
                            <TextBlock Text="💼 Data Transaksi" FontSize="16" FontWeight="Bold" 
                               Foreground="#495057" Margin="0,0,0,12"/>

                            <StackPanel>
                                <!-- Quantity -->
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Quantity:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBox x:Name="txtManualQuantity" Style="{StaticResource ModernTextBox}" 
                                     Text="1" TextChanged="TxtManualQuantity_TextChanged"/>
                                </StackPanel>

                                <!-- Harga Beli -->
                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Harga Beli:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBox x:Name="txtManualHargaBeli" Style="{StaticResource ModernTextBox}" 
                                     TextChanged="TxtManualHargaBeli_TextChanged" Text="1"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,12">
                                    <TextBlock Text="Harga Jual:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                    <TextBox x:Name="txtManualHargaJual" Style="{StaticResource ModernTextBox}" 
                                     Text="1" TextChanged="TxtManualHargaJual_TextChanged"/>
                                </StackPanel>
                                

                                <!-- Checkbox Kredit -->
                                <CheckBox x:Name="chkManualKredit" Content="Pembelian Kredit" FontWeight="SemiBold" 
                                  Margin="0,0,0,8" Checked="ChkManualKredit_Checked" Unchecked="ChkManualKredit_Unchecked"/>

                                <!-- Supplier Kredit (Hidden by default) -->
                                <StackPanel x:Name="pnlManualSupplierKredit" Visibility="Collapsed" Margin="0,0,0,12">
                                    <TextBlock Text="Nama Supplier Kredit:" FontWeight="SemiBold" Margin="0,8,0,4"/>
                                    <TextBox x:Name="txtManualSupplierKredit" Style="{StaticResource ModernTextBox}"/>
                                </StackPanel>

                                <!-- Total -->
                                <Border Background="#E8F5E8" CornerRadius="8" Padding="16" Margin="0,8,0,0">
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <TextBlock Text="💰 Total Transaksi:" FontWeight="Bold" FontSize="16" Margin="0,0,8,0"/>
                                        <TextBlock x:Name="txtManualTotal" Text="Rp 0" FontWeight="Bold" FontSize="16" Foreground="#2E7D32"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer Modal -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button Content="❌ Batal" Click="BtnManualBatal_Click" 
                        Style="{StaticResource SecondaryButton}" 
                        Width="100" Margin="0,0,12,0"/>
                        <Button Content="✅ Tambah" Click="BtnManualTambah_Click" 
                        Style="{StaticResource SuccessButton}" 
                        Width="100"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>