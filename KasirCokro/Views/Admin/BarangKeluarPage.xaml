<Window x:Class="KasirCokro.Views.Admin.BarangKeluarPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"      
		Title="Kasir" Height="900" Width="1400"
        Background="#FAFBFC"
        WindowStartupLocation="CenterScreen"
        FontFamily="Inter, Segoe UI"
        WindowState="Maximized">

    <Window.Resources>
        
        <Style x:Key="SidebarButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#64748B"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,16"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Margin="12,2" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F1F5F9"/>
                                <Setter Property="Foreground" Value="#475569"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
        <Style x:Key="ActiveSidebarButton" TargetType="Button" BasedOn="{StaticResource SidebarButton}">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2563EB"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#007BFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0056B3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004085"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
        <Style x:Key="SuccessButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#28A745"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E7E34"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        
        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#DC3545"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#C82333"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        
        <Style x:Key="InfoButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#17A2B8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#138496"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        
        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#6C757D"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#545B62"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Padding" Value="12,6.7"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007BFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
        <Style x:Key="ModernComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton" 
                                            Grid.Column="2" 
                                            Focusable="false"
                                            IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                            ClickMode="Press"
                                            Background="Transparent"
                                            BorderThickness="0"/>
                                <ContentPresenter x:Name="ContentSite"
                                                IsHitTestVisible="False"
                                                Content="{TemplateBinding SelectionBoxItem}"
                                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                Margin="3,3,23,3"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"/>
                                <Popup x:Name="Popup"
                                     Placement="Bottom"
                                     IsOpen="{TemplateBinding IsDropDownOpen}"
                                     AllowsTransparency="True"
                                     Focusable="False"
                                     PopupAnimation="Slide">
                                    <Grid x:Name="DropDown"
                                        SnapsToDevicePixels="True"
                                        MinWidth="{TemplateBinding ActualWidth}"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                        <Border x:Name="DropDownBorder"
                                              Background="White"
                                              BorderThickness="1"
                                              BorderBrush="#DEE2E6"
                                              CornerRadius="6"/>
                                        <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Grid>
                                </Popup>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="#007BFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#F1F3F4"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        
        <Style x:Key="ModernDataGridColumnHeader" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Foreground" Value="#495057"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="12,16"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        
        <Style x:Key="ModernDataGridRow" TargetType="DataGridRow">
            <Setter Property="Padding" Value="0,8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        
        <Style x:Key="ModernDataGridCell" TargetType="DataGridCell">
            <Setter Property="Padding" Value="12,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Padding="{TemplateBinding Padding}" 
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#E0E7FF" ShadowDepth="0" BlurRadius="20" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        
        <Border Background="White" Width="240" HorizontalAlignment="Left" 
                BorderBrush="#E5E7EB" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="0,16,0,0">
                    
                    <StackPanel Margin="16,0,16,20">
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#3B82F6" CornerRadius="6" Width="28" Height="28" Margin="0,0,10,0">
                                <TextBlock Text="🏪" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="CokroApp" FontSize="16" FontWeight="Bold" Foreground="#111827"/>
                                <TextBlock Text="Admin Panel" FontSize="10" Foreground="#6B7280"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>

                    
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="MAIN" FontSize="10" FontWeight="SemiBold" 
                                   Foreground="#9CA3AF" Margin="16,0,16,8"/>

                        <Button Style="{StaticResource SidebarButton}" Click="BtnDashboard_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Dashboard" FontSize="13"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButton}" Click="Product_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📦" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Data Produk" FontSize="13"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButton}" Click="Supplier_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🏭" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Data Supplier" FontSize="13"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButton}" Click="BrngMasuk_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📥" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Barang Masuk" FontSize="13"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource ActiveSidebarButton}" Click="BrngKeluar_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📤" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Barang Keluar" FontSize="13"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButton}" Click="Kas_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💳" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Kas" FontSize="13"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    
                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="LAPORAN" FontSize="10" FontWeight="SemiBold" 
                                   Foreground="#9CA3AF" Margin="16,0,16,8"/>

                        <Button Style="{StaticResource SidebarButton}"  Click="TransactionMasuk_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📊" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Transaksi Masuk" FontSize="13"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButton}" Click="TransactionKeluar_Click" >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📈" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Transaksi Keluar" FontSize="13"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButton}" >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💸" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Hutang" FontSize="13"/>
                            </StackPanel>
                        </Button>

                        <Button Style="{StaticResource SidebarButton}"  Click="Pihutang_Click">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💰" FontSize="14" Margin="0,0,10,0"/>
                                <TextBlock Text="Piutang" FontSize="13"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    
                    <Border Background="#F8FAFC" CornerRadius="8" Margin="16,0,16,16" Padding="12">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                <Ellipse Width="24" Height="24" Fill="#3B82F6" Margin="0,0,8,0"/>
                                <StackPanel VerticalAlignment="Center">
                                    <TextBlock Text="Admin User" FontSize="12" FontWeight="SemiBold" Foreground="#111827"/>
                                    <TextBlock Text="Administrator" FontSize="10" Foreground="#6B7280"/>
                                </StackPanel>
                            </StackPanel>
                            <Button Content="Logout" Background="Transparent" Foreground="#EF4444" 
                                    BorderThickness="0" FontSize="10" HorizontalAlignment="Left" 
                                    Padding="0" Cursor="Hand" Click="Logout_Click"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
        
        <Grid Margin="240,0,0,0">
            
            <Border Background="White" Height="80" VerticalAlignment="Top" 
                    BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                <Grid Margin="32,0">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                        <TextBlock Text="Kasir" FontSize="32" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,8"/>
                        <TextBlock Text="Scan barcode untuk menambahkan produk" FontSize="16" Foreground="#6B7280" FontWeight="Medium"/>
                    </StackPanel>

                    
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
                        <Border Background="#E8F5E8" CornerRadius="8" Padding="16,8" Margin="0,0,16,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="💰" FontSize="20" Margin="0,0,8,0"/>
                                <StackPanel>
                                    <TextBlock Text="Total Transaksi" FontSize="11" Foreground="#6B7280"/>
                                    <TextBlock x:Name="txtTotalTransaksi" Text="Rp 0" FontSize="18" FontWeight="Bold" Foreground="#2E7D32"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <Border Background="#E3F2FD" CornerRadius="8" Padding="16,8">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📦" FontSize="20" Margin="0,0,8,0"/>
                                <StackPanel>
                                    <TextBlock Text="Total Item" FontSize="11" Foreground="#6B7280"/>
                                    <TextBlock x:Name="txtTotalItem" Text="0" FontSize="18" FontWeight="Bold" Foreground="#1976D2"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>

            
            <Grid Margin="24,80,24,24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                
                <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="📱 Scanner Barcode" FontSize="18" FontWeight="Bold" Foreground="#212529" Margin="0,0,0,12"/>
                            <TextBox x:Name="txtBarcode" Style="{StaticResource ModernTextBox}" 
                                     Width="300" HorizontalAlignment="Left" 
                                     PreviewKeyDown="TxtBarcode_PreviewKeyDown"
                                         TextChanged="TxtBarcode_TextChanged"
                                     Background="#F8F9FA" BorderBrush="#28A745" BorderThickness="2" 
                                     Margin="0,0,0,8" FontSize="16"/>
                            <TextBlock Text="Scan barcode atau ketik manual untuk menambahkan produk ke keranjang" 
                                       FontSize="12" Foreground="#6C757D"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                            <Button Content="🔍 Cari Manual" Click="BtnCariManual_Click" 
                                    Style="{StaticResource InfoButton}" Width="120" Margin="0,0,12,0"/>
                            <Button Content="🔄 Clear" Click="BtnClear_Click" 
                                    Style="{StaticResource SecondaryButton}" Width="80"/>
                        </StackPanel>
                    </Grid>
                </Border>

                
                <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="🛒 Keranjang Belanja" FontSize="18" FontWeight="Bold" Foreground="#212529" VerticalAlignment="Center"/>
                            <Button Content="🗑️ Clear All" Click="BtnClearAll_Click" 
                                    Style="{StaticResource DangerButton}" Width="100" Margin="16,0,0,0"/>
                        </StackPanel>

                        <DataGrid x:Name="dgKeranjang" Grid.Row="1" 
                                  Style="{StaticResource ModernDataGrid}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                                  RowStyle="{StaticResource ModernDataGridRow}"
                                  CellStyle="{StaticResource ModernDataGridCell}"
                                  SelectionMode="Single">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Barcode" Binding="{Binding Barcode}" Width="0" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Nama Produk" Binding="{Binding NamaProduk}" Width="300" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Harga" Width="200" IsReadOnly="True">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="HargaJual" StringFormat="Rp {0:N0}"/>
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Qty" Binding="{Binding Quantity}" Width="120"/>
                                <DataGridTextColumn Header="Subtotal" Width="200" IsReadOnly="True">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="Subtotal" StringFormat="Rp {0:N0}"/>
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Aksi" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="🗑️" Click="BtnHapusItem_Click" 
                                                    Style="{StaticResource DangerButton}" 
                                                    Width="30" Height="30" Padding="0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                
                <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,20,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Metode Pembayaran:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <ComboBox x:Name="cmbMetodePembayaran" Style="{StaticResource ModernComboBox}" 
                                          Width="150" SelectionChanged="CmbMetodePembayaran_SelectionChanged">
                                    <ComboBoxItem Content="Tunai" IsSelected="True"/>
                                    <ComboBoxItem Content="Kredit"/>
                                </ComboBox>
                            </StackPanel>

                            <StackPanel x:Name="pnlNamaPelanggan" Visibility="Collapsed" Margin="0,0,20,0">
                                <TextBlock Text="Nama Pelanggan:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBox x:Name="txtNamaPelanggan" Style="{StaticResource ModernTextBox}" Width="200"/>
                            </StackPanel>

                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Jumlah Bayar:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBox x:Name="txtJumlahBayar" Style="{StaticResource ModernTextBox}" 
                                         Width="150" TextChanged="TxtJumlahBayar_TextChanged"/>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock Text="Kembalian:" FontWeight="SemiBold" Margin="0,0,0,4"/>
                                <TextBlock x:Name="txtKembalian" Text="Rp 0" FontSize="14" FontWeight="Bold" 
                                           Foreground="#2E7D32" Padding="12,10" Background="#E8F5E8" 
                                           HorizontalAlignment="Left" Width="150"/>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom">
                            <Button Content="💾 Simpan" Click="BtnSimpan_Click" 
                                    Style="{StaticResource SuccessButton}" Width="120" Margin="0,0,12,0"/>
                            <Button Content="🖨️ Cetak" Click="BtnCetak_Click" 
                                    Style="{StaticResource InfoButton}" Width="120"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        
        <Grid x:Name="modalOverlay" Background="#80000000" Visibility="Collapsed">
            <Border Background="White" CornerRadius="12" Width="450" Height="400" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" ShadowDepth="0" BlurRadius="20" Opacity="0.3"/>
                </Border.Effect>

                <Grid Margin="24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="📦 Tambah Produk ke Keranjang" FontSize="20" FontWeight="Bold" 
                                   Foreground="#212529" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <Separator Background="#DEE2E6"/>
                    </StackPanel>

                    
                    <StackPanel Grid.Row="1">
                        
                        <Border Background="#F8F9FA" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Barcode:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="txtModalBarcode" Text="" Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Nama:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtModalNamaProduk" Text="" Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Harga:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" x:Name="txtModalHarga" Text="" Margin="0,0,0,8"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Stok:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" x:Name="txtModalStok" Text="" Margin="0,0,0,8"/>
                            </Grid>
                        </Border>

                        
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Masukkan Jumlah:" FontWeight="SemiBold" Margin="0,0,0,8"/>
                            <TextBox x:Name="txtQuantity" Style="{StaticResource ModernTextBox}" 
                                     Text="1" Width="100" HorizontalAlignment="Left" 
                                     PreviewTextInput="TxtQuantity_PreviewTextInput"/>
                        </StackPanel>

                        
                        <Border Background="#E8F5E8" CornerRadius="8" Padding="16" Margin="0,0,0,16">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Subtotal: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <TextBlock x:Name="txtModalSubtotal" Text="Rp 0" FontSize="16" FontWeight="Bold" 
                                           Foreground="#2E7D32" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        
                        <Border x:Name="borderWarning" Background="#FFF3CD" BorderBrush="#FFEAA7" 
                                BorderThickness="1" CornerRadius="6" Padding="12" Margin="0,0,0,16" 
                                Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="⚠️" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock x:Name="txtWarning" Text="" FontSize="12" Foreground="#856404" 
                                           TextWrapping="Wrap" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                        <Button Content="✅ Tambah ke Keranjang" Click="BtnTambahKeKeranjang_Click" 
                                Style="{StaticResource SuccessButton}" Width="150" Margin="0,0,12,0"/>
                        <Button Content="❌ Batal" Click="BtnBatalModal_Click" 
                                Style="{StaticResource SecondaryButton}" Width="100"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        
        <Grid x:Name="modalPencarian" Background="#80000000" Visibility="Collapsed">
            <Border Background="White" CornerRadius="12" Width="800" Height="600" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" ShadowDepth="0" BlurRadius="20" Opacity="0.3"/>
                </Border.Effect>

                <Grid Margin="24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    
                    <StackPanel Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="🔍 Cari Produk Manual" FontSize="20" FontWeight="Bold" 
                                   Foreground="#212529" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                        <Separator Background="#DEE2E6"/>
                    </StackPanel>

                    
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBox x:Name="txtCariProduk" Style="{StaticResource ModernTextBox}" 
                                 Width="300"
                                 TextChanged="TxtCariProduk_TextChanged"/>
                        <Button Content="🔍 Cari" Click="BtnCari_Click" 
                                Style="{StaticResource InfoButton}" Width="80" Margin="12,0,0,0"/>
                    </StackPanel>

                    
                    <Border Grid.Row="2" Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                        <DataGrid x:Name="dgProdukPencarian" 
                              Style="{StaticResource ModernDataGrid}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                              RowStyle="{StaticResource ModernDataGridRow}"
                              CellStyle="{StaticResource ModernDataGridCell}"
                              SelectionMode="Single"
                              MouseDoubleClick="DgProdukPencarian_MouseDoubleClick">        
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Barcode" Binding="{Binding [barcode]}" Width="120" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Nama Produk" Binding="{Binding [nama_produk]}" Width="200" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Harga" Width="100" IsReadOnly="True">
                                    <DataGridTextColumn.Binding>
                                        <Binding Path="[harga_jual]" StringFormat="Rp {0:N0}"/>
                                    </DataGridTextColumn.Binding>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="Stok" Binding="{Binding [stok]}" Width="80" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Supplier" Binding="{Binding [nama_supplier]}" Width="120" IsReadOnly="True"/>
                                <DataGridTemplateColumn Header="Aksi" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="Pilih" Click="BtnPilihProduk_Click" 
                            Style="{StaticResource SuccessButton}" 
                            Width="60" Height="30" Padding="0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Border>

                    
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="❌ Tutup" Click="BtnTutupPencarian_Click" 
                                Style="{StaticResource SecondaryButton}" Width="100"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        
        <Grid x:Name="loadingOverlay" Background="#80000000" Visibility="Collapsed">
            <Border Background="White" CornerRadius="12" Width="200" Height="100" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="⏳" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock Text="Memproses..." FontSize="14" FontWeight="SemiBold" 
                               Foreground="#495057" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        
        <Grid x:Name="successMessage" Background="#80000000" Visibility="Collapsed">
            <Border Background="White" CornerRadius="12" Width="300" Height="120" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" ShadowDepth="0" BlurRadius="20" Opacity="0.3"/>
                </Border.Effect>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="✅" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                    <TextBlock x:Name="txtSuccessMessage" Text="Transaksi berhasil disimpan!" 
                               FontSize="14" FontWeight="SemiBold" Foreground="#2E7D32" 
                               HorizontalAlignment="Center" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>